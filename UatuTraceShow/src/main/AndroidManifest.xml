<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vinctor.uatuLib">

    <application>
        <activity
            android:name="com.vinctor.uatu.ui.MainActivity"
            android:label="Uatu"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:taskAffinity="com.vinctor.uatu.task"
            android:theme="@style/Uatu.Theme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.vinctor.uatu.UatuInitProvider"
            android:authorities="${applicationId}.UatuInitProvider" />
    </application>

</manifest>